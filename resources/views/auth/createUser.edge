<body class="bg-gray-100 h-screen flex items-center justify-center">

    <form class="bg-white p-8 rounded shadow-md w-1/4  " action="/createUser" method="POST">
        {{ csrfField() }}

        <div class="font-sans font-bold text-3xl flex justify-center mb-6 border-b-black ">Create New User</div>
        
        <div class="mb-4">
            <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
            <input type="text" name="name" placeholder="Your Name" id="name"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
            @if(flashMessages.has('errors.name'))
            <small class="text-red-500">{{ flashMessages.get("errors.name") }}</small>
            @endif
        </div>

        <div class="mb-4">
            <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
            <input type="text" name="username" placeholder="Username" id="username"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
            @if(flashMessages.has('errors.username'))
            <small class="text-red-500">{{ flashMessages.get("errors.username") }}</small>
            @endif
        </div>

        <div class="mb-4">
            <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input type="email" name="email" placeholder="Your Email" id="email"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
            @if(flashMessages.has('errors.email'))
            <small class="text-red-500">{{ flashMessages.get("errors.email") }}</small>
            @endif
        </div>

        <div class="mb-4">
            <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
            <input type="password" name="password" placeholder="Your Password" id="password"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
            @if(flashMessages.has('errors.password'))
            <small class="text-red-500">{{ flashMessages.get("errors.password") }}</small>
            @endif
        </div>

        <div class="mb-4">
            <label for="password_confirmation" class="block text-gray-700 text-sm font-bold mb-2">Confirm
