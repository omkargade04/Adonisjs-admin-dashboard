<body class="bg-gray-100 h-screen flex items-center justify-center">

    <form class="bg-white p-8 rounded shadow-md max-w-md" action="/editUserInfo/{{user.id}}" method="GET">
        {{ csrfField() }}

        <div class="font-sans font-bold text-3xl flex justify-center mb-6 border-b-black ">Edit User</div>
        
        <div class="mb-4">
            <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
            <input type="text" name="name" placeholder="Your Name" id="name" value="{{user.name}}"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
            @if(flashMessages.has('errors.name'))
            <small class="text-red-500">{{ flashMessages.get("errors.name") }}</small>
            @endif
        </div>

        <div class="mb-4">
            <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input type="email" name="email" placeholder="Your Email" id="email" value="{{user.email}}"
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
            @if(flashMessages.has('errors.email'))
            <small class="text-red-500">{{ flashMessages.get("errors.email") }}</small>
            @endif
        </div>

        <div class="mb-4 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-500 cursor-pointer">
            <input type="submit" value="Edit User" class="">
        </div>
